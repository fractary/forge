{
  "name": "@fractary/forge-cli",
  "version": "1.0.0",
  "description": "Command-line interface for Fractary Forge - Create, manage, and publish AI agent definitions",
  "keywords": [
    "fractary",
    "forge",
    "cli",
    "ai",
    "agents",
    "tools",
    "plugins"
  ],
  "homepage": "https://github.com/fractary/forge#readme",
  "bugs": {
    "url": "https://github.com/fractary/forge/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fractary/forge.git",
    "directory": "cli"
  },
  "license": "MIT",
  "author": "Fractary",
  "bin": {
    "fractary-forge": "bin/fractary-forge.js"
  },
  "files": [
    "bin",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm test"
  },
  "dependencies": {
    "@fractary/forge": "file:../sdk/js",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.0",
    "inquirer": "^9.2.12",
    "js-yaml": "^4.1.0",
    "ora": "^5.4.1",
    "prompts": "^2.4.2",
    "ajv": "^8.12.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^18.19.3",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
