{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "description": "Claude Code project settings for fractary plugin marketplace",
  "extraKnownMarketplaces": {
    "fractary": {
      "source": {
        "source": "github",
        "repo": "fractary/claude-plugins"
      }
    }
  },
  "enabledPlugins": {
    "fractary-codex@fractary": true,
    "fractary-repo@fractary": true,
    "fractary-work@fractary": true,
    "fractary-file@fractary": true,
    "fractary-docs@fractary": true,
    "fractary-logs@fractary": true,
    "fractary-spec@fractary": true,
    "fractary-status@fractary": true,
    "fractary-faber@fractary": true,
    "fractary-faber-cloud@fractary": true
  },
  "permissions": {
    "bash": {
      "allow": [
        "awk",
        "cat",
        "echo",
        "find",
        "gh api",
        "gh auth login",
        "gh auth refresh",
        "gh auth status",
        "gh issue close",
        "gh issue comment",
        "gh issue create",
        "gh issue list",
        "gh issue view",
        "gh pr close",
        "gh pr comment",
        "gh pr create",
        "gh pr list",
        "gh pr review",
        "gh pr status",
        "gh pr view",
        "gh repo clone",
        "gh repo view",
        "git add",
        "git branch",
        "git checkout",
        "git commit",
        "git config",
        "git diff",
        "git fetch",
        "git for-each-ref",
        "git log",
        "git ls-remote",
        "git merge",
        "git pull",
        "git push",
        "git rebase",
        "git remote",
        "git reset",
        "git rev-parse",
        "git show",
        "git show-ref",
        "git stash",
        "git status",
        "git switch",
        "git tag",
        "grep",
        "head",
        "jq",
        "ls",
        "pwd",
        "sed",
        "sort",
        "tail",
        "uniq",
        "wc",
        "which"
      ],
      "requireApproval": [
        "git push --set-upstream origin main",
        "git push --set-upstream origin master",
        "git push --set-upstream origin production",
        "git push -u origin main",
        "git push -u origin master",
        "git push -u origin production",
        "git push origin main",
        "git push origin master",
        "git push origin production"
      ],
      "deny": [
        "> /dev/sd",
        "chmod 777",
        "chown",
        "curl | bash",
        "curl | sh",
        "dd if=",
        "format",
        "gh repo archive",
        "gh repo delete",
        "gh secret delete",
        "git clean -fdx",
        "git filter-branch",
        "git push --force origin main",
        "git push --force origin master",
        "git push --force origin production",
        "git push --force-with-lease origin main",
        "git push --force-with-lease origin master",
        "git push --force-with-lease origin production",
        "git push -f origin main",
        "git push -f origin master",
        "git push -f origin production",
        "git rebase --onto",
        "git reset --hard origin/main",
        "git reset --hard origin/master",
        "git reset --hard origin/production",
        "init",
        "kill -9",
        "mkfs",
        "pkill",
        "reboot",
        "rm -rf *",
        "rm -rf .",
        "rm -rf /",
        "rm -rf ~",
        "shutdown",
        "su",
        "sudo",
        "systemctl",
        "wget | bash",
        "wget | sh"
      ]
    }
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/plugins/marketplaces/fractary/plugins/status/scripts/status-line.sh"
  }
}
