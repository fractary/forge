{
  "name": "@fractary/forge",
  "version": "1.0.0",
  "description": "Core SDK for Forge asset management with multi-resolver architecture",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./resolvers": {
      "require": "./dist/resolvers/index.js",
      "types": "./dist/resolvers/index.d.ts"
    },
    "./types": {
      "require": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./config": {
      "require": "./dist/config/index.js",
      "types": "./dist/config/index.d.ts"
    },
    "./cache": {
      "require": "./dist/cache/index.js",
      "types": "./dist/cache/index.d.ts"
    },
    "./errors": {
      "require": "./dist/errors/index.js",
      "types": "./dist/errors/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build && npm test",
    "preversion": "npm test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fractary/forge.git"
  },
  "keywords": [
    "forge",
    "sdk",
    "assets",
    "bundler",
    "scaffolding",
    "fractary",
    "resolver",
    "github",
    "gitlab"
  ],
  "author": "Fractary",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cosmiconfig": "^9.0.0",
    "follow-redirects": "^1.15.5",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.0",
    "js-yaml": "^4.1.0",
    "minimatch": "^10.0.3",
    "ora": "^8.0.1",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/cosmiconfig": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.11.0",
    "@types/semver": "^7.5.6",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
